<Window x:Class="OOSD.AddLocation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOSD"
        mc:Ignorable="d"
        Title="AddLocation" Height="450" Width="800">
    <Grid>
        <Label x:Name="locTypeLabel" Content="Location Type:" HorizontalAlignment="Left" Margin="160,109,0,0" VerticalAlignment="Top" Height="29" Width="94"/>
        <Button x:Name="goBackBtn" Content="Go Back" HorizontalAlignment="Left" Margin="77,329,0,0" VerticalAlignment="Top" Width="92" Height="32" Click="goBackBtn_Click"/>
        <Label x:Name="locNameLabel" Content="Location Name:" HorizontalAlignment="Left" Margin="160,177,0,0" VerticalAlignment="Top" Height="29" Width="94"/>
        <TextBox x:Name="locNameTextBox" HorizontalAlignment="Left" Height="23" Margin="284,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165"/>
        <Button x:Name="addLocBtn" Content="Add Location" HorizontalAlignment="Left" Margin="509,179,0,0" VerticalAlignment="Top" Width="105" Height="27" Click="addPersonBtn_Click"/>
        <ListBox x:Name="locListBox" HorizontalAlignment="Left" Height="100" Margin="284,63,0,0" VerticalAlignment="Top" Width="165"/>

    </Grid>
</Window>
